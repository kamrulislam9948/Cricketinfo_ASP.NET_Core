
@{
    ViewBag.Title = "Create";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        form {
            max-width: 600px;
            margin: 0 auto;
            margin-top: 30px;
            margin-bottom: 20px;
            background-color: #ffffff;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            display: flex;
            flex-direction: column;
        }

        .form-group {
            margin-bottom: 15px;
        }

        label {
            display: block;
            font-weight: bold;
            margin-bottom: 5px;
        }

        input[type="text"],
        input[type="tel"],
        input[type="email"],
        input[type="number"],
        button[type="submit"],
        button[type="reset"],
        select 
        {
            width: 560px;
            padding: 10px;
            border-radius: 3px;
            border: 1px solid #ccc;
            font-size: 14px;
        }

         #reset {
            background-color: #797979;
            color: #fff;
            border: none;
            cursor: pointer;
            margin-top: 10px;
            width: 560px;
            padding: 10px;
        }
        #submit {
            background-color: lightblue;
            color: black;
            border: none;
            cursor: pointer;
            margin-top: 10px;
            width: 560px;
            padding: 10px;
        }
        #submit:hover {
            background-color: cornflowerblue;
            color:white;
        }

        #reset:hover {
            background-color: #ff0000;
        }
    </style>
</head>
<body>
    <h5 class=" mt-3 d-flex justify-content-center"><strong>Create Player Information...</strong></h5>

    <form id="signup-form">
        <div class="form-group">
            <select id="Team" name="Team" required>
                <option value="" selected disabled>Select Team</option>
                <option value="Australia">Australia</option>
                <option value="India">India</option>
                <option value="England">England</option>
                <option value="Pakistan">Pakistan</option>
                <option value="NewZealand">NewZealand</option>
                <option value="SouthAfrica">South Africa</option>
                <option value="Bangladesh">Bangladesh</option>
                <option value="WestIndies">West Indies</option>
                <option value="Srilanka">Srilanka</option>
                <option value="Afganistan">Afganistan</option>
                <option value="Ireland">Ireland</option>
                <option value="Zimbabwe">Zimbabwe</option>

                <!-- Add more options as needed -->
            </select>
        </div>

        <div class="form-group">
            <input type="text" id="first-name" name="first-name" placeholder="Player name" required>
        </div>
        <div class="form-group">
            <input type="number" id="Age" name="Age" placeholder="Age" required>
        </div>
        <div class="form-group">
            <input type="text" id="Prole" name="Prole" placeholder="Playing role" required>
        </div>
        <div class="form-group">
            <input type="number" id="Matches" name="Matches" placeholder="Matches" required>
        </div>
        <div class="form-group">
            <input type="number" id="Runs" name="Runs" placeholder="Runs" required>
        </div>
        <div class="form-group">
            <input type="number" id="Hundred" name="Hundred" placeholder="Hundred" required>
        </div>
        <div class="form-group">
            <input type="number" id="Fifty" name="Fifty" placeholder="Fifty" required>
        </div>
        <div class="form-group">
            <input type="number" id="Wicket" name="Wicket" placeholder="Wicket" required>
        </div>
        <div class="form-group">
            <input type="number" id="Salary" name="Salary" placeholder="Salary" required>
        </div>
        <div class="form-group">
            <button type="submit" id="submit" class="submit button" value="insert">Save to database</button>
            <button type="reset" id="reset" class="reset button">Reset form</button>
        </div>
    </form>
</body>
</html>
